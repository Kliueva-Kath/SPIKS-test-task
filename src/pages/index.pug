                  span.item__text Total THC (Low first)
              li.dropdown__item.item
                a.item__wrapper(data-value='cbd-high')
                  .item__icon
                    svg.item__icon-text
                      use(xlink:href='/assets/icons/default/sprite.svg#CBD')
